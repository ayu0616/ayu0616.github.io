{
    "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "files": {
        "ignore": [
            "node_modules",
            ".next",
            "out",
            ".mypy_cache",
            "blog-contents"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "all": true,
            "style": {
                "useNamingConvention": "off",
                "noNonNullAssertion": "off",
                "noDefaultExport": "off",
                "noNamespaceImport": "off",
                "noImplicitBoolean": "off"
            },
            "suspicious": {
                "noConsoleLog": "off",
                "noEmptyBlockStatements": "off",
                "useAwait": "off",
                "noArrayIndexKey": "warn"
            },
            "correctness": {
                "noUnusedVariables": "off",
                "noNodejsModules": "off",
                "noUndeclaredVariables": "off"
            },
            "complexity": {
                "noBannedTypes": "off",
                "noForEach": "off"
            },
            "nursery": {
                "useSortedClasses": {
                    "level": "warn",
                    "options": {
                        "attributes": ["classList", "className", "class"],
                        "functions": ["cn", "tw"]
                    }
                }
            },
            "a11y": {
                "useKeyWithClickEvents": "off"
            },
            "performance": {
                "noAccumulatingSpread": "off"
            },
            "security": { "noDangerouslySetInnerHtml": "off" }
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "json": {
        "parser": {
            "allowComments": true
        },
        "formatter": {
            "enabled": true,
            "indentStyle": "space"
        }
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "indentStyle": "space",
            "semicolons": "asNeeded",
            "quoteStyle": "single",
            "trailingCommas": "all"
        }
    }
}
